<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserInterface">
	
	<!-- 查询单个 -->
	<select id="queryGoods" parameterType="java.util.Map" resultType="entity.GoodsInfo">
	select * from UserInfo  where id=#{id}
	</select>
	<!-- 修改 -->
	<update id="updateGoods" parameterType="java.util.Map">
		update Userinfo set money=#{money} where id=#{id};
	</update>
 	
</mapper>